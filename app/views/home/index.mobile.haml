%div{:data =>{:role=>"page"}, :id => "news"}

  %div{:data => {:role => "header"}}
    %h1 
      Snow Central
    %div{:data =>{:role=>"navbar"}}
      %ul
        %li
          %a.ui-btn-active{:href => "#home",:data=>{:icon => "home"}}
            Home
        %li
          %a.ui-btn-active{:href => "#news"}
            News
  %div{:data => {:role => "content"}}
    %ul{:data => {:role => "listview"}}
      -for n in @news do
        %li.news
       
          %h2
            =n.title  
          %p
            %span.data
              Pubblicato il:
              =n.created_at.to_formatted_s :short
            %span.author
              Da:
              =n.user.user_name
          %ul{:data => {:role => "listview"}}
            %li
              %h2
                =n.title  
              %p
                %span.data
                  Pubblicato il:
                  =n.created_at.to_formatted_s :short
                %span.author
                  Da:
                  =n.user.user_name
                %div
                  =n.body.html_safe

            
