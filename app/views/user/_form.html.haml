= form_for(:user, @user,:url => user_path,:html => {:multipart => true,:method=>"put"}) do |f|
	- if @user.errors.any?
		#error_explanation
			%h2
				= pluralize(@user.errors.count, "error")
				prohibited this news from being saved:
			%ul
				- @user.errors.full_messages.each do |msg|
					%li= msg
	.field
		= f.label :email
		%br/
		= f.text_field :email
	.field
		= f.label :avatar
		%br/
		= f.file_field :avatar
		%br/
		%br/
	.actions
		= f.submit
