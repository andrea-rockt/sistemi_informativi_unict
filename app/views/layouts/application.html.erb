<!DOCTYPE html>
<html>
	<head>
		<title><%= t 'title' %></title>
		<%= stylesheet_link_tag "compiled/screen" %>
		<%= stylesheet_link_tag "compiled/print" %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="flashes">

				<% [:info, :error,:notice,:alert].each do |key| %>
				   <% if flash[key] %>
				   <div class="<%= key %>" id="flash">
				     <%= flash[key] %>
				    <div id="close_flash"></div>
				   </div>
				   <% end %>
				 <% end %>
		</div>

		<header id="pages_header">
					<div id="session_info">
			<% unless current_user%>
					<a href="<%= new_user_session_path%>"> LOGIN </a>
			<% else%>
					<a href="#"><%=current_user.email%> - </a><a href="/users/sign_out">signout</a></p>
			<% end%>
		</div>
			<img id="logo" src="/images/logo.png"/>
			<nav id="main_nav">
				<ul>
					<li>
						<a href="<%= root_path %>">HOME</a>
					</li>
					<li>
						<a href="#">PRODOTTI</a>
					</li>
				</ul>
			</nav>
			<nav id="breadcrumb_nav">
				<ul>
					<li>
						<a href="#">
							<img width="30" src="/images/home.png">
						</a>
						<img width="30" src="/images/arrow.png">
					</li>
				</ul>
			</nav>
		</header>
		<div id="main">

			<div id="grid">
				<%= yield %>
			</div>
		</div>
		
		<footer ="pages_footer">
			<hr>
		</footer>
	</body>
</html>
