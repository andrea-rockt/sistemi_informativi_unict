<!DOCTYPE html>
<html>
	<head>
		<title><%=t "title", :scope => [controller.controller_name,controller.action_name] %></title>
		<%= stylesheet_link_tag "compiled/screen" %>
		<%= stylesheet_link_tag "compiled/print" %>
		<%= javascript_include_tag  :defaults%>
		<%= csrf_meta_tag %>
		<%= yield :head%>
	</head>
	<body>
		<div id="flashes">

				<% [:info, :error,:notice,:alert].each do |key| %>
				   <% if flash[key] %>
				   <div class="<%= key %>" id="flash">
				     <%= flash[key] %>
				    <div id="close_flash"></div>
				   </div>
				   <% end %>
				 <% end %>
		</div>

		<header id="pages_header">
					
			<img id="logo" src="/images/logo.png"/>
			<nav id="main_nav">
				<ul>
					<li>
						<a href="<%= root_path %>">HOME</a>
					</li>
					<li>
						<%= link_to "PRODOTTI", products_path%>
					</li>
					<li>
						<%= link_to "NEGOZI", stores_path%>
					</li>
					
					<li id="right_aligned_li">
						<ul id="sub_list">
							<li>
								<% unless current_user%>
									<a href="<%= new_user_session_path%>"> LOGIN </a>
								<% else%>							
									<a href="<%= user_path(current_user)%>"><%= current_user.user_name.upcase%></a> - 
									<% if current_user.try(:is_admin)%>
										<%= link_to "ADMIN", :controller => "home", :action => "admin"%> - 
									<% end %>
									<a href="/users/sign_out">ESCI</a></p>
								<% end%>
							</li>
						</ul>
					</li>
				</ul>
			</nav>
			<nav id="breadcrumb_nav">
				<ul>
						<%=breadcrumb_link_to root_path do
							 image_tag 'home.png',width: 30
						end%>
				</ul>
			</nav>
		</header>
		<div id="main">

			<div id="grid">
				<%= yield %>
			</div>
		</div>
		
		<footer id="pages_footer">
			<hr>
			<%= yield :scripts %>
			<!--<div id="features_container">
				<div class="rotate">Using Rails</div>
			</div>
			-->	
		</footer>
	</body>
</html>
