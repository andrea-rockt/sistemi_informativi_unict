<!DOCTYPE html>
<html>
	<head>
		<title><%= t 'title' %></title>
		<%= stylesheet_link_tag "compiled/screen" %>
		<%= stylesheet_link_tag "compiled/print" %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<header id="pages_header">
			<img id="logo" src="/images/logo.png"/>
			<nav id="main_nav">
				<ul>
					<li>
						<a href="#">HOME</a>
					</li>
					<li>
						<a href="#">PRODOTTI</a>
					</li>
				</ul>
			</nav>
			<nav id="breadcrumb_nav">
				<ul>
					<li>
						<a href="#">
							<img width="30" src="/images/home.png">
						</a>
						<img width="30" src="/images/arrow.png">
					</li>
				</ul>
			</nav>
		</header>
		<div id="main">

			<div id="grid">
				 <% [:info, :error,:notice,:alert].each do |key| %>
				   <% if flash[key] %>
				   <div class="<%= key %>" id="flash">
				     <%= flash[key] %>
				   </div>
				   <% end %>
				 <% end %>
				<%= yield %>
			</div>
		</div>
		
		<footer ="pages_footer">
			<hr>
		</footer>
	</body>
</html>
