= form_for(@product,:html => {:multipart => true}) do |f| 
  -if @product.errors.any? 
    #error_explanation
      %h2 
        = "#{pluralize(@product.errors.count, "error")}  prohibited this product from being saved:"
      %ul
        -@product.errors.full_messages.each do |msg| 
          %li 
            = msg 
  .field
    = f.label :model 
    %br/
    = f.text_field :model 
  .field
    = f.label :price 
    %br/
    = f.text_field :price 
  .field
    = f.label :quantity 
    %br/
    = f.text_field :quantity, :value => @product.quantity.join(",")
  .field
    = f.label :size 
    %br/
    = f.text_field :size, :value => @product.size.join(",")
  .field
    = f.label :year 
    %br/
    = f.text_field :year 
  .field
    = f.label :description 
    %br/
    = f.text_area :description 
  .field
    = f.label :image
    %br/
    = f.file_field :image 
  .actions
    = f.submit 

